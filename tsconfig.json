{
  "compilerOptions": {
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "rootDir": "./src",
      "strictNullChecks": true,
      "skipLibCheck": true,
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ],
          "@*": [
            "src/"
          ]
      },
      "noUnusedLocals": true
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
